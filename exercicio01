amespace exercicio01
{
    //1.Leia um número e exiba o seu sucessor

    class Program
    {
        static void Main(string[] args)
        {
            int numero = 0;
            int sucessor = 0;
                                 
            Console.WriteLine("Digite um número");
            numero = int.Parse(Console.ReadLine());
            sucessor = numero + 1;
            Console.WriteLine("O sucessor é: {0}", sucessor);


        }
    }
}
